<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <include layout="@layout/appbar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="56dp"
                android:paddingTop="8dp"
                android:paddingBottom="41dp"
                android:orientation="vertical"
                android:background="#f9f9f7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp">

                    <RelativeLayout
                        android:id="@+id/dayHistoryItem"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/background_my_indicators">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="185dp"
                            android:paddingTop="45dp"
                            android:layout_centerInParent="true"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_time"/>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:lines="2"
                                android:paddingTop="11dp"
                                android:text="@string/my_indicators"
                                android:textAlignment="center"
                                android:textColor="#9d7465"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="@string/wellness_today"
                                android:textAlignment="center"
                                android:textColor="#9d7465"
                                android:textSize="12dp"
                                android:paddingTop="5dp"/>

                        </LinearLayout>



                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/weekHistoryItem"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/background_my_history">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="185dp"
                            android:paddingTop="45dp"
                            android:layout_centerInParent="true"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_history"/>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:lines="2"
                                android:paddingTop="11dp"
                                android:text="@string/my_indicators"
                                android:textAlignment="center"
                                android:textColor="#626b96"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="@string/of_well_being_week"
                                android:textAlignment="center"
                                android:textColor="#626b96"
                                android:textSize="12dp"
                                android:paddingTop="5dp"/>

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp">

                    <RelativeLayout
                        android:id="@+id/relaxItem"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/background_relax">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="185dp"
                            android:paddingTop="45dp"
                            android:layout_centerInParent="true"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_eye_dashboard"/>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:lines="2"
                                android:paddingTop="11dp"
                                android:text="@string/i_am_relaxing"
                                android:textAlignment="center"
                                android:textColor="#2b7a7e"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/monthHistoryItem"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/background_my_data">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="185dp"
                            android:paddingTop="45dp"
                            android:layout_centerInParent="true"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_statistic"/>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:lines="2"
                                android:paddingTop="11dp"
                                android:text="@string/my_history"
                                android:textAlignment="center"
                                android:textColor="#30718c"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="@string/of_well_being_month"
                                android:textAlignment="center"
                                android:textColor="#30718c"
                                android:textSize="12dp"
                                android:paddingTop="5dp"/>

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/bottom_menu" />
            <fragment
                android:id="@+id/popupFragment"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:name="com.cyplay.atproj.asperteam.ui.fragment.base.BasePopupFragment"
                app:layout_popup="@layout/fragment_base_popup"/>

        </RelativeLayout>

    </android.support.design.widget.CoordinatorLayout>
</android.support.v4.widget.DrawerLayout>